<div id="omniauth_connect">
  <% if authorizations %>
    <% unless authorizations.empty? %>
      <p><b>You can sign in to this account using:</b></p>
      <div class="authentications">
        <% for authorization in authorizations %>
          <span class="auth_providers_used">
            <%= image_tag "auth/#{authorization.provider}_32.png" %>
            <%= link_to image_tag("auth/remove.png"), authorization, :confirm => "Are you sure you want to remove #{authorization.provider} authentication option?", :method => :delete, :class => "omniauth_remove", :title => "remove #{authorization.provider} authentication option?" %>
          </span>
        <% end %>
        <div class="clear"></div>
      </div>
    <% end %>
    <p><b>Add another service to sign in with:</b></p>
  <% else %>
    <p><b>Add one of the services to sign in with:</b></p>
  <% end %>
  <a href="/auth/twitter" class="auth_provider" title = "Add twitter service to sign in with">
    <%= image_tag "auth/twitter_32.png", :alt => "Twitter" %>
  </a>
  <a href="/auth/facebook" class="auth_provider" title = "Add facebook to sign in with">
    <%= image_tag "auth/facebook_32.png", :alt => "Facebook" %>
  </a>
  <a href="/auth/open_id?openid_url=https://www.google.com/accounts/o8/id" class="auth_provider" title = "Add google to sign in with">
    <%= image_tag "auth/google_32.png", :alt => "Google" %>
  </a>
  <a href="/auth/linked_in" class="auth_provider" title = "Add linkedin to sign in with">
    <%= image_tag "auth/linked_in_32.png", :alt => "Linkedin" %>
  </a>
  <div class="clear"></div>
</div>
